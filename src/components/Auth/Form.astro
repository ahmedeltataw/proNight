---
interface Props {
    AuthType: 'login' | 'register' | 'profile';
}
const { AuthType } = Astro.props;
import FormGroup from "@components/ui/FormGroup.astro";
import Button from "@components/ui/Button.astro";
import Link from "@components/ui/Link.astro";


---
<section class="Auth">
    <div class="container">
        <form class="AuthForm mx-auto py-10 px-9 round-4">
            {
                AuthType === 'login' ? (
                    <h4 class="fs-28 fw-700 mb-6 text-center">تسجيل دخول</h4>
                    <FormGroup
                        type="email"
                        title="البريد الالكتروني"
                        name="email"
                        place="ادخل البريد الالكتروني"
                        id="email"
                        autocomplete="email"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="password"
                        title="كلمة المرور"
                        name="password"
                        place="ادخل كلمة المرور"
                        id="password"
                        isLabel={true}
                        IsPassword={true}
                        autocomplete="current-password"
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        Icons={{openEye:{name:"openEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7 d-none" ,id:'openEye'},closeEye:{name:"closeEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7" ,id:'closeEye'}}}
                    />
                    <div class="remember d-flex align-items-center justify-between mt-2 pb-5 px-3">
                        <FormGroup
                        type="checkbox"
                        title="تذكرني"
                        name="remember"
                        place="تذكرني"
                        id="remember"
                        isLabel={true}
                        LabelClassName="fs-16 fw-600  d-inline-block o-80"
                        InputClassName="w-8 h-8 "
                        FormClassName="d-flex align-items-center "
                    />
                        <Link
                            href="#!"
                            Class="fs-16 fw-600 relative o-80"
                            aria="نسيت كلمة المرور"
                            text="   نسيت كلمة المرور؟"
                            
                        />

                    </div>
                    <Button type="submit" aria={`تسجيل دخول`} ClassName=" w-full mx-auto d-flex justify-center  btn btn-round relative round-4 mt-5">
                        <span class="fs-18 fw-700 relative">تسجيل دخول</span>
                    </Button>
                    <p class="fs-16 fw-600 text-center py-9 relative  break o-80">أو قم بتسجيل الدخول باستخدام</p>
                    <Button type="button" aria={`google login`} ClassName=" w-9/10 mx-auto d-flex justify-center  btn btn-round  relative round-4 mb-5" isBorder>
                        <Link href="#!" Class="fs-18 fw-700  relative d-flex align-items-center gap-3" text="حساب جوجل"  aria="تسجيل دخول باستخدام جوجل" icon={{name:"Google", ClassIcon:"w-10 h-10 relative" ,side:"right"}} />
                    </Button>
                    <p class="text-center notHave">
                        ليس لديك حساب؟
                        <Link
                            href="signUp.html"
                            Class="fs-16 fw-600 relative o-80"
                            aria="انشاء حساب"
                            text="انشاء حساب"
                            
                        />
                    </p>
                ) : AuthType === 'register' ?
                 (
                    <h4 class="fs-28 fw-700 mb-6 text-center">انشاء حساب</h4>
                    <FormGroup
                        type="text"
                        title="الاسم بالكامل"
                        name="fullName"
                        place="ادخل الاسم بالكامل"
                        id="fullName"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="number"
                        title="رقم الجوال"
                        name="phone"
                        place="ادخل رقم الجوال"
                        id="phone"
                        autocomplete="tel"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="email"
                        title="البريد الالكتروني"
                        name="email"
                        place="ادخل البريد الالكتروني"
                        id="email"
                        autocomplete="email"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="password"
                        title="كلمة المرور"
                        name="password"
                        place="ادخل كلمة المرور"
                        id="password"
                        isLabel={true}
                        IsPassword={true}
                        autocomplete="new-password"
                        FormClassName="pb-5"
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        Icons={{openEye:{name:"openEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7 d-none" ,id:'openEye'},closeEye:{name:"closeEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7" ,id:'closeEye'}}}
                    />
                    <div class="remember d-flex align-items-center justify-between  pb-5 px-3">
                        <FormGroup
                        type="checkbox"
                        title="تسجيل كمقدم خدمة"
                        name="remember"
                        place="تذكرني"
                        id="remember"
                        isLabel={true}
                        LabelClassName="fs-18 fw-700  d-inline-block "
                        InputClassName="w-10 h-10 "
                        FormClassName="d-flex align-items-center "
                    />
                        

                    </div>
                    <Button type="submit" aria={`تسجيل `} ClassName=" w-full mx-auto d-flex justify-center  btn btn-round relative round-4 mt-5">
                        <span class="fs-18 fw-700 relative">تسجيل </span>
                    </Button>
                    <p class="fs-16 fw-600 text-center py-9 relative  break o-80">أو قم بانشاء حساب باستخدام</p>
                    <Button type="button" aria={`google register`} ClassName=" w-9/10 mx-auto d-flex justify-center  btn btn-round  relative round-4 mb-5" isBorder>
                        <Link href="#!" Class="fs-18 fw-700  relative d-flex align-items-center gap-3" text="حساب جوجل"  aria="انشاء حساب باستخدام جوجل" icon={{name:"Google", ClassIcon:"w-10 h-10 relative" ,side:"right"}} />
                    </Button>
                    <p class="text-center notHave">
                         لديك حساب؟
                        <Link
                            href="signIn.html"
                            Class="fs-16 fw-600 relative o-80"
                            aria="تسجيل دخول"
                            text="تسجيل دخول"
                            
                        />
                    </p>
                ) :(
                <h4 class="fs-28 fw-700 mb-6 text-center">تعديل حسابك</h4>
                    <FormGroup
                        type="text"
                        title="الاسم بالكامل"
                        name="fullName"
                        place="ادخل الاسم بالكامل"
                        id="fullName"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="number"
                        title="رقم الجوال"
                        name="phone"
                        place="ادخل رقم الجوال"
                        id="phone"
                        autocomplete="tel"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="email"
                        title="البريد الالكتروني"
                        name="email"
                        place="ادخل البريد الالكتروني"
                        id="email"
                        autocomplete="email"
                        isLabel={true}
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        FormClassName="pb-5"
                    />
                    <FormGroup
                        type="password"
                        title="كلمة المرور"
                        name="password"
                        place="ادخل كلمة المرور"
                        id="password"
                        isLabel={true}
                        IsPassword={true}
                        autocomplete="new-password"
                        FormClassName="pb-5"
                        LabelClassName="fs-16 fw-700 ps-3 pb-2 d-inline-block o-80"
                        InputClassName="w-full h-24 ps-4 round-4 "
                        Icons={{openEye:{name:"openEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7 d-none" ,id:'openEye'},closeEye:{name:"closeEye",ClassName:"w-14 h-14 absolute top-0 inset-e-7" ,id:'closeEye'}}}
                    />
                    <Button type="submit" aria={`حفظ `} ClassName=" w-full mx-auto d-flex justify-center  btn btn-round relative round-4 mt-5">
                        <span class="fs-18 fw-700 relative">حفظ </span>
                    </Button>
                    <Button type="submit" aria={`حذف حسابك `} ClassName=" w-full mx-auto d-flex justify-center  btn btn-noBg relative round-4">
                        <span class="fs-16 fw-700 relative">حذف حسابك </span>
                    </Button>
                )
            }
        </form>
    </div>
</section>